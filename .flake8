[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    .mypy_cache,
    .DS_Store
ignore = 
    E203,
    E501,
    W503,
    E402,
    F401
per-file-ignores =
    __init__.py:F401
    migrations/*:E501
max-complexity = 10

